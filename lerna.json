{
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "pnpm",
  "packages": [
    "packages/core/*",
    "packages/portal/*"
  ],
  "ignoreChanges": [
    "**/*.spec.ts",
    "**/*.cy.ts",
    "**/__fixtures__",
    "**/__mocks__",
    "**/jest.config*.js",
    "**/.eslintignore"
  ],
  "command": {
    "version": {
      "message": "chore(release): publish [skip ci]",
      "allowBranch": "chore/KHCP-5795_ci",
      "conventionalCommits": true,
      "changelogPreset": "metahub"
    }
  }
}
